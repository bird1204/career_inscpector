<%=render partial: 'shared/nav_bar'%>
<div class="container" style="min-height:calc(100vh - 174px); margin-top:50px;">
  <div class="row">
    <div class="col s12 m8 push-m2 ">
      <h6 class="grey-text text-darken-3" style="font-size:20px;">忘記密碼</h6>
    </div>
    <div class="col s12 m8 push-m2 white ">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email , '電子郵件' %><br />
		    <%= f.email_field :email, autofocus: true %>
		  </div>

		  <div class="actions">
		    <%= f.submit "送出" , class: "btn grey darken-2" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
		<br>

   </div>
  </div>
</div>
